<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_menu_exam"
            android:background="@null"
            android:onClick="test"
            android:text="随机测试" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_menu_result"
            android:background="@null"
            android:onClick="test1"
            android:text="全部测试" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_menu_message"
            android:background="@null"
            android:onClick="test2"
            android:text="设置" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main_menu_exit"
            android:background="@null"
            android:onClick="test3"
            android:text="退出" />
    </LinearLayout>
</LinearLayout>